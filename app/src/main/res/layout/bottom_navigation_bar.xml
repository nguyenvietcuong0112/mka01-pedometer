<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECFAF4"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:elevation="8dp">

    <!-- Steps -->
    <LinearLayout
        android:id="@+id/nav_steps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_steps"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_nav_steps" />

        <TextView
            android:id="@+id/text_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Steps"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#5F7DED"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <!-- Activity -->
    <LinearLayout
        android:id="@+id/nav_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_activity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_nav_activity_unselected" />

        <TextView
            android:id="@+id/text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Activity"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#B0B0B0"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <!-- Report -->
    <LinearLayout
        android:id="@+id/nav_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_report"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_nav_report_unselected" />

        <TextView
            android:id="@+id/text_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Report"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#B0B0B0"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <!-- Achievement -->
    <LinearLayout
        android:id="@+id/nav_achievement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_achievement"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_step_achievement_unselected" />

        <TextView
            android:id="@+id/text_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Achievement"
            android:textSize="10sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="#B0B0B0"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <!-- Settings -->
    <LinearLayout
        android:id="@+id/nav_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_nav_settings_unselected" />

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Settings"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#B0B0B0"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- App bar -->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Achievement"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F2F4F7"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/tab_steps"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_left_selected"
                    android:gravity="center"
                    android:text="Step"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium" />

                <TextView
                    android:id="@+id/tab_combo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_right_unselected"
                    android:gravity="center"
                    android:text="Combo day"
                    android:textColor="#A0A0A0"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <!-- Trophy + current value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/img_trophy"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_nav_achievement" />

                <TextView
                    android:id="@+id/label_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Current steps"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular" />

                <TextView
                    android:id="@+id/text_current_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:fontFamily="@font/montserrat_bold" />
            </LinearLayout>

            <!-- Share button -->
            <TextView
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_primary_button"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="24dp" />

            <!-- Achievements grid -->
            <GridLayout
                android:id="@+id/grid_achievements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false">

                <!-- 8 items will be filled programmatically -->

            </GridLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>

